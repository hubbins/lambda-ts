{
  "files": [
    "src/*.ts"
  ],
  "compilerOptions": {
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es5",
      "es2015.promise"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
